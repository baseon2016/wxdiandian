
.title {
  margin: 24rpx 0;
  padding: 0 24rpx;
  font-size: 48rpx;
  font-family: PingFangSC, PingFangSC-Medium;
  font-weight: bold;
  text-align: left;
  color: #333333;
  line-height: 67rpx;
}
.content {
  display: flex;
  align-items: flex-start;
  padding: 20rpx 0;
}
.shop-cover {
  width: 92rpx;
  height: 92rpx;
  border-radius: 8rpx;
  flex-shrink: 0;
}
.goods-info,.shop-info {
  flex-grow: 1;
  margin-left: 24rpx;
}
.goods-title {
  font-size: 26rpx;
  font-family: PingFangSC, PingFangSC-Medium;
  font-weight: 500;
  text-align: left;
  color: #666666;
  line-height: 37rpx;
}
.shop-title{
	font-size: 34rpx;
	font-family: PingFangSC, PingFangSC-Regular;
	font-weight: 400;
	text-align: left;
	color: #333333;
	line-height: 48rpx;
	letter-spacing: 1rpx;
}
.goods-subinfo {
  font-size: 22rpx;
  font-family: PingFangSC, PingFangSC-Regular;
  font-weight: 400;
  text-align: left;
  color: #484848;
  line-height: 30rpx;
  letter-spacing: 1rpx;
}
.shop-subinfo {
	display: flex;
	align-items: center;
  font-size: 24rpx;
  font-family: PingFangSC, PingFangSC-Regular;
  font-weight: 400;
  text-align: left;
  color: #666666;
  line-height: 33rpx;
}
.shop-subinfo image{
	width: 16rpx;
	height: 21rpx;
	background: #9b9b9b;
}
.divider{
	margin: 0 9px;
}
.rating{
	display: flex;
	align-self: center;
}
.rating .stars{
	display: flex;
	align-self: center;
}
.rating .stars image{
	width: 18rpx;
	height: 18rpx;
	background: #fe9900;
}
.rating .stars+.stars{
	margin-left: 8rpx;
}
.rating text{
	font-size: 22rpx;
	font-family: PingFangSC, PingFangSC-Regular;
	font-weight: 400;
	text-align: left;
	color: #484848;
	line-height: 30rpx;
	letter-spacing: 1rpx;
	margin-left: 12rpx;
}
.tel{
	width: 44rpx;
	height: 44rpx;
	align-self: flex-end;
	margin-bottom: 11rpx;
	margin-right: 68rpx;
}
.bill {
  width: 200rpx;
  font-size: 36rpx;
  font-family: PingFangSC, PingFangSC-Medium;
  font-weight: 500;
  text-align: right;
  color: #ff3b30;
  line-height: 50rpx;
}
.column {
  width: 90%;
  background: #ffffff;
  border-radius: 16rpx;
  margin: 0 auto;
  padding: 6rpx 22rpx;
}
.row {
  padding: 21rpx 0;
  position: relative;
  font-size: 30rpx;
  font-family: PingFangSC, PingFangSC-Medium;
  font-weight: 500;
  text-align: right;
  color: #cccccc;
  line-height: 42rpx;
}
.row-title {
  position: absolute;
  left: 0;
  font-size: 30rpx;
  font-family: PingFangSC, PingFangSC-Medium;
  font-weight: 500;
  text-align: left;
  color: #333333;
  line-height: 42rpx;
}
.column-title {
  font-size: 30rpx;
  font-family: PingFangSC, PingFangSC-Medium;
  font-weight: 500;
  text-align: left;
  color: #333333;
  line-height: 42rpx;
  padding: 21rpx 0;
}
.interact{
	display: flex;
}
.interact-btn{
	width: 50%;
	text-align: center;
	font-size: 30rpx;
	font-family: PingFangSC, PingFangSC-Medium;
	font-weight: 500;
	text-align: center;
	color: #333333;
	line-height: 42rpx;
	padding-top: 21rpx;
	padding-bottom: 27rpx;
}


.mg-t-24 {
  margin-top: 20rpx;
}
.border-b {
  border-bottom: 1rpx solid #d8d8d8;
}
